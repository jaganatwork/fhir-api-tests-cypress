{
  "name": "fhir-api-tests-cypress",
  "version": "1.0.0",
  "description": "FHIR API test automation with Cypress and Mochawesome reporting",
  "main": "index.js",
  "scripts": {
    "cy:run": "npx cypress run --browser electron --headless",
    "report:merge": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/merged.json",
    "report:html": "npx marge cypress/reports/merged.json --reportDir cypress/reports/final",
    "test": "npm run cy:run && npm run report:merge && npm run report:html"
  },
  "keywords": [
    "cypress",
    "typescript",
    "fhir",
    "api-testing",
    "healthcare"
  ],
  "author": "Jagannathan Naganathan",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.10",
    "cypress": "^15.4.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
